{
  "editor.fontFamily": "GeistMono Nerd Font Mono",
  "workbench.colorTheme": "GitHub Dark",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSaveMode": "file",
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "terminal.integrated.fontSize": 12,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "unifiedjs.vscode-mdx"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]": {
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go"
  },
  "extensions.ignoreRecommendations": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.lineHeight": 0,
  "editor.fontSize": 12,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "pubspec.yaml": "pubspec.lock,pubspec_overrides.yaml,.packages,.flutter-plugins,.flutter-plugins-dependencies,.metadata",
    "*.dart": "${capture}.g.dart",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "git.openRepositoryInParentFolders": "never",
  "breadcrumbs.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.minimap.enabled": false,
  "vim.leader": " ",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "f", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<Esc>"],
      "commands": ["workbench.action.closePanel"]
    },
    {
      "before": ["<leader>", "f", "g"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    {
      "before": ["<Tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<S-Tab>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "f", "m"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "r", "r"],
      "commands": ["workbench.action.debug.run"]
    }
  ],
  "vim.statusBarColorControl": true,
  "workbench.colorCustomizations": {
    "editor.background": "#121212",
    "editor.foreground": "#ededed",
    "editorLineNumber.foreground": "#5c6370",
    "editorLineNumber.activeForeground": "#ededed",
    "editor.selectionBackground": "#3e4452",
    "editor.lineHighlightBackground": "#2e2e2e",
    "editorSuggestWidget.background": "#2e2e2e",
    "editorSuggestWidget.selectedBackground": "#47a8ff",
    "editorGroup.border": "#5c6370",
    "statusBar.background": "#005f87",
    "statusBar.noFolderBackground": "#005f87",
    "statusBar.debuggingBackground": "#005f87",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["keyword", "storage.type", "storage.modifier"],
        "settings": { "foreground": "#ff4d8d" }
      },
      {
        "scope": ["string"],
        "settings": { "foreground": "#00ca50" }
      },
      {
        "scope": ["constant", "constant.numeric"],
        "settings": { "foreground": "#47a8ff" }
      },
      {
        "scope": ["entity.name.function", "support.function"],
        "settings": { "foreground": "#c472fb" }
      },
      {
        "scope": ["comment"],
        "settings": { "foreground": "#5c6370" }
      }
    ]
  }
}

